<p style="color: green"><%= notice %></p>
<!-- heading -->
<div class="mb-4">
  <strong> <%= @discussion.user.username %> </strong><br>
  <%= @discussion.title %>
</div>

<!-- new post -->
<div class="mb-4">
  <%= render "posts/form", post: @post %>
</div>

<!-- all posts -->
<div id="posts" class="mb-5">
  <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
</div>

<div>
  <%= link_to "Back", movie_path(@discussion.movie) %>
</div>
